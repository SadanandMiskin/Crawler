{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS", // This line specifies the module system
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  
    "baseUrl": ".",
    "outDir": "./dist"
  },
  "include": ["src/**/*"]
}